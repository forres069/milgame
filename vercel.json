{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/build"
        }
      },
      {
        "src": "backend/requirements.txt",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/$1",
        "methods": ["GET", "POST", "PUT", "DELETE", "HEAD", "OPTIONS"]
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1",
        "methods": ["GET", "HEAD"]
      }
    ]
  }
  